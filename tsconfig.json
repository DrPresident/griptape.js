{
  "compilerOptions": {
    "target": "ES5",
    "moduleResolution": "node",
    "strict": true,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "types",
    "esModuleInterop": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
